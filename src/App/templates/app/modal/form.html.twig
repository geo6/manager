<div id="modal-form" class="modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-edit"></i> Edit</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form autocomplete="off">
                    {% for column in (table.table.columns | filter(c => c.name not in table.columns.readonly)) %}
                    <div class="mb-3" data-datatype="{{ column.type.name }}">
                        <label for="form-input-{{ column.name }}" class="form-label">{{ column.name }}</label>
                        {% if column.name in table.columns.file %}
                        {{ upload(column.name, ui.file[column.name].accept ?? null) }}
                        {% else %}
                        {{ input(column.name, '', column.type) }}
                        {% endif %}
                    </div>
                    {% endfor %}
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="modal-form-delete" class="btn btn-danger"><i class="far fa-trash-alt"></i> Delete</button>
                <button type="button" id="modal-form-save" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
            </div>
        </div>
    </div>
</div>
<tbody>
    {% for record in records %}
    {% set id = record[table.table.name ~ '_' ~ table.primaryKey] %}
    <tr data-id="{{ id }}">

        {% for column in table.table.columns %}
            {% if column.name in table.columns.file|keys %}
            {{ thumbnail(id, column.name, record[table.table.name ~ '_' ~ column.name]) }}
            {% else %}
            {{ value(record[table.table.name ~ '_' ~ column.name], column.type) }}
            {% endif %}
        {% endfor %}

        {% for fk in table.foreignKeys %}
        {% for column in fk.foreignTable.columns %}
        {{ value(record[fk.foreignTable.name ~ '_' ~ column.name], column.type) }}
        {% endfor %}
        {% endfor %}

    </tr>
    {% endfor %}
</tbody>
<div id="modal-filter" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-filter"></i> Filter</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form autocomplete="off">
                    <div class="row">
                        <div class="col-4">
                            <select name="key" class="form-control">
                                <optgroup label="Table: {{ table.identifier.table }}">
                                    {% for column in columns if column.name not in [geometryColumn.name, 'updateuser', 'updatetime'] %}
                                    <option
                                        value="{{ table.identifier.schema }}.{{ table.identifier.table }}.{{ column.name }}"
                                        data-datatype="{{ column.datatype }}">{{ column.name }}</option>
                                    {% endfor %}
                                </optgroup>
                                <optgroup label="Geometry">
                                    <option value="geometry.type">Geometry type</option>
                                    <option value="geometry.length">Length</option>
                                    <option value="geometry.area">Area</option>
                                    <option value="geometry.perimeter">Perimeter</option>
                                </optgroup>
                            </select>
                        </div>
                        <div class="col-3">
                            <select name="operation" class="form-control text-center">
                                <option value="eq">=</option>
                                <option value="ne">&ne;</option>
                                <option value="gt">&gt;</option>
                                <option value="ge">&ge;</option>
                                <option value="lt">&lt;</option>
                                <option value="le">&le;</option>
                                <option value="like">LIKE</option>
                                <option value="nlike">NOT LIKE</option>
                                <option value="null">IS NULL</option>
                                <option value="nnull">IS NOT NULL</option>
                            </select>
                        </div>
                        <div class="col">
                            <input name="value" class="form-control">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" disabled>Apply</button>
            </div>
        </div>
    </div>
</div>

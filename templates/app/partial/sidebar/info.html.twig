<div class="sidebar-pane" id="info">
    <h1 class="sidebar-header">
        Info <span id="info-list"></span>
        <span class="sidebar-close"><i class="fas fa-caret-left"></i></span>
    </h1>

    <div class="mt-3">
        <div class="mb-3">
            <div class="d-flex justify-content-between">
                <div>
                    <button id="infos-details-btn-edit" type="button" class="btn btn-outline-warning btn-sm">
                        <i class="far fa-edit"></i>
                        Edit
                    </button>
                    <button id="infos-details-btn-delete" type="button" class="btn btn-danger btn-sm" title="Delete this feature" hidden>
                        <i class="far fa-trash-alt"></i>
                    </button>
                    <button id="infos-details-btn-locate" type="button" class="btn btn-light btn-sm">
                        <i class="fas fa-location-arrow"></i>
                        Locate
                    </button>
                </div>
                <div class="btn-group" role="group">
                    <button id="infos-list-btn-prev" type="button" class="btn btn-light btn-sm disabled" disabled>
                        <i class="fas fa-angle-double-left"></i>
                    </button>
                    <button id="infos-list-btn-next" type="button" class="btn btn-light btn-sm disabled" disabled>
                        <i class="fas fa-angle-double-right"></i>
                    </button>
                </div>
            </div>
        </div>
        <div id="info-table">
            <table class="table table-bordered table-striped table-sm small">
                <caption>
                    <div><i class="fas fa-bookmark"></i> Feature id: <span id="info-details-id"></span></div>
                    <div id="info-details-geometry"></div>
                    <div class="text-info">
                        Last update
                        <span id="info-details-updateuser" class="text-nowrap">by <i class="far fa-user"></i> <span style="font-style: italic;"></span></span>
                        <span id="info-details-updatetime" class="text-nowrap">on <i class="far fa-clock"></i> <time></time></span>
                    </div>
                </caption>
                <tbody>
{% for column in columns if column.name not in [geometryColumn, 'updateuser', 'updatetime'] %}
                    <tr>
                        <th>{{ column.name == keyColumn ? '<i class="fas fa-bookmark"></i> ' }}{{ column.name }}</th>
                        <td data-column="{{ column.name }}"></td>
                    </tr>
{% endfor %}
                </tbody>
            </table>
            <div id="info-details-geometry" class="text-info"></div>
        </div>
        <div id="info-form" hidden>
            <form class="small" autocomplete="off">
                <input type="text" name="{{ keyColumn }}" readonly hidden>
{% for column in columns if (column.name != geometryColumn and column.readonly == false) %}
                <div class="form-group mb-2">
                    <div class="d-flex justify-content-between">
                        <label class="font-weight-bold" for="input-{{ column.name }}">
                            {{ column.name }}
                        </label>
                        <div>
                            <i class="fas fa-check-circle text-success" hidden></i>
                            <i class="fas fa-exclamation-circle text-warning" hidden></i>
                            <i class="fas fa-times-circle text-danger" hidden></i>
                        </div>
                    </div>
{% if (column.name == keyColumn) %}
{% elseif column.datatype == 'boolean' %}
                    <select class="form-control form-control-sm" id="input-{{ column.name }}" name="{{ column.name }}" data-datatype="{{ column.datatype }}">
                        <option></option>
                        <option value="1">TRUE</option>
                        <option value="0">FALSE</option>
                    </select>
{% elseif column.datatype == 'integer' %}
                    <input type="number" class="form-control form-control-sm" id="input-{{ column.name }}" name="{{ column.name }}" data-datatype="{{ column.datatype }}">
{% elseif column.datatype == 'text' %}
                    <textarea class="form-control form-control-sm" id="input-{{ column.name }}" name="{{ column.name }}" data-datatype="{{ column.datatype }}"></textarea>
{% else %}
                    <input type="text" class="form-control form-control-sm" id="input-{{ column.name }}" name="{{ column.name }}" data-datatype="{{ column.datatype }}">
{% endif %}
                </div>
{% endfor %}
            </form>
        </div>
    </div>
</div>
